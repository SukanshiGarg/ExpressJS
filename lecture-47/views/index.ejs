<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <fieldset>
    <h1>Displaying all the blogs</h1>

    <% comments.forEach(function(i) { %>
      <h1>ID is: <%= i.id %></h1>
      <h2>Name is: <%= i.username %></h2>
      <h4>Comment is: <%= i.comment %></h4>
      <a href="/blogs/<%= i.id %>">Show</a>

    <% }); %>

    </fieldset>
  </body>
</html>
